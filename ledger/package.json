{
    "name": "asset-transfer-basic",
    "version": "1.0.0",
    "description": "Asset-transfer-basic application implemented in JavaScript",
    "engines": {
        "node": ">=12",
        "npm": ">=5"
    },
    "scripts": {
        "dev": "nodemon",
        "start": "ts-node server.ts"
    },
    "engineStrict": true,
    "author": "Hyperledger",
    "license": "Apache-2.0",
    "dependencies": {
        "@types/express": "^4.17.9",
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "fabric-ca-client": "^2.2.0",
        "fabric-network": "^2.2.0",
        "typescript": "^4.1.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.12.1",
        "@babel/core": "^7.12.3",
        "@babel/node": "^7.12.1",
        "@babel/plugin-proposal-class-properties": "^7.12.1",
        "@babel/plugin-transform-runtime": "^7.12.1",
        "@babel/polyfill": "^7.12.1",
        "@babel/preset-env": "^7.12.1",
        "@babel/preset-typescript": "^7.12.7",
        "@types/cors": "^2.8.8",
        "@types/morgan": "^1.9.2",
        "@typescript-eslint/eslint-plugin": "^4.8.1",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.1.0",
        "morgan": "^1.10.0",
        "nodemon": "^2.0.6",
        "prettier": "^2.1.2",
        "ts-node": "^9.0.0",
        "tslint": "^6.1.3"
    },
    "babel": {
        "presets": [
            "@babel/preset-env",
            "@babel/typescript"
        ],
        "plugins": [
            "@babel/plugin-proposal-class-properties",
            "@babel/plugin-transform-runtime",
            "@babel/plugin-syntax-dynamic-import"
        ]
    },
    "nyc": {
        "extension": [
            ".ts",
            ".tsx"
        ],
        "exclude": [
            "coverage/**",
            "dist/**"
        ],
        "reporter": [
            "text-summary",
            "html"
        ],
        "all": true,
        "check-coverage": true,
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
    }
}
